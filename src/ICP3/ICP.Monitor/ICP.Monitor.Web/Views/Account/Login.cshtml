@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="~/Content/themes/default/easyui.css">
    <link rel="stylesheet" type="text/css" href="~/Content/themes/mobile.css">
    <link rel="stylesheet" type="text/css" href="~/Content/themes/icon.css">
    <script type="text/javascript" src="~/Scripts/jquery.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.easyui.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.easyui.mobile.js"></script>
    <script type="text/javascript" src="~/Scripts/Account/Login.js"></script>
</head>
<body>
    <div class="easyui-navpanel">
        <header>
            <div class="m-toolbar">
                <span class="m-title">Login to System</span>
            </div>
        </header>
        <form id="loginForm">
            @*<div style="margin:20px auto;width:100px;height:100px;border-radius:100px;overflow:hidden">
                    <img src="../images/login1.jpg" style="margin:0;width:100%;height:100%;">
                </div>*@
            <div style="padding:0 20px">
                <div style="margin-bottom:10px">
                    <input id="txtLoginName" type="text" class="easyui-textbox" value="@ViewBag.UserName" data-options="required:true,validType:'length[1,32]',iconCls:'icon-man'" style="width:100%;height:38px">
                </div>
                <div>
                    <input id="txtPassword" type="text" class="easyui-passwordbox" data-options="required:true,validType:'length[1,32]'" style="width:100%;height:38px">
                </div>
                <div style="padding:5px 0;text-align: center;color: red;" id="showMsg"></div>
                <div style="text-align:center;margin-top:30px">
                    <a class="easyui-linkbutton" style="width:100%;height:40px" href="javascript:void(0)" onclick="login()"><span style="font-size:16px">Login</span></a>
                </div>
            </div>
        </form>
    </div>
</body>
</html>
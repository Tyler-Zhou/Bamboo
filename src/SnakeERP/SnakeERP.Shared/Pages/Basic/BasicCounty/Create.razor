@page "/Basic/BasicCounty/Create"
@using SnakeERP.ViewModel.Basic.BasicCountyVMs;
@inherits BasePage

<ValidateForm @ref="vform" Model="@Model" OnValidSubmit="@Submit">
    <Row ItemsPerRow="ItemsPerRow.Two" RowType="RowType.Normal">

            <BootstrapInput @bind-Value="@Model.Entity.Code"  />
            <BootstrapInput @bind-Value="@Model.Entity.Name"  />
            <Select @bind-Value="@Model.Entity.CityID" Items="@AllBasicCitys" PlaceHolder="@WtmBlazor.Localizer["Sys.PleaseSelect"]"/>
    </Row>
    <div class="modal-footer table-modal-footer">
        <Button Color="Color.Secondary" Icon="fa fa-close" Text="@WtmBlazor.Localizer["Sys.Close"]" OnClick="OnClose" />
        <Button Color="Color.Primary" ButtonType="ButtonType.Submit" Icon="fa fa-save" Text="@WtmBlazor.Localizer["Sys.Create"]" IsAsync="true" />
    </div>
</ValidateForm>

@code {

    private BasicCountyVM Model = new BasicCountyVM();
    private ValidateForm vform { get; set; }

    private List<SelectedItem> AllBasicCitys = new List<SelectedItem>();


    protected override async Task OnInitializedAsync()
    {

        AllBasicCitys = await WtmBlazor.Api.CallItemsApi("/api/BasicCounty/GetBasicCitys", placeholder: WtmBlazor.Localizer["Sys.PleaseSelect"]);

        await base.OnInitializedAsync();
    }


    private async Task Submit(EditContext context)
    {
        await PostsForm(vform, "/api/BasicCounty/add", (s) => "Sys.OprationSuccess");
    }

    public void OnClose()
    {
        CloseDialog();
    }

}

<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <!--  Regular Task  -->
    <sys:String x:Key="RegularTaskNightVision">体验神秘而不祥的夜视</sys:String>
    <sys:String x:Key="RegularTaskUnderestimated">你低估了那个聪明的老混蛋</sys:String>
    <sys:String x:Key="RegularTaskEvents">一系列惊天动地的事件让你孤单茫然，但坚定</sys:String>
    <sys:String x:Key="RegularTaskJourney">怀着未实现的决心，你踏上了漫长而危险的旅程</sys:String>
    <!--  Plot Task  -->
    <sys:String x:Key="TaskPlot">加载 ^ActIndex$</sys:String>
    <!--  Heading To Killing Fields Task  -->
    <sys:String x:Key="HeadingToKillingFields">前往杀戮场</sys:String>
    <!--  Kill Task  -->
    <sys:String x:Key="TaskKillKeyForNPC">与 ^NPCRaceName$ ^NPCClassName$ 交谈</sys:String>
    <sys:String x:Key="TaskKillKeyForMonster">对战 ^TitleName$ ^NPCClassName$ the ^NPCRaceName$</sys:String>
    <!--  Task Heading To Market Task  -->
    <sys:String x:Key="TaskHeadingToMarket">走向市场</sys:String>
    <!--  Sell Task  -->
    <sys:String x:Key="TaskSell">正在卖 ^ItemQuantity$ ^ItemName$</sys:String>
    <!--  Buy Task  -->
    <sys:String x:Key="TaskBuy">协商购买更好的装备</sys:String>
</ResourceDictionary>
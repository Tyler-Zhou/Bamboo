    <sys:String x:Key="TaskHeadingToMarket">走向市场</sys:String>
    <!--  Sell Task  -->
    <sys:String x:Key="TaskSell">正在卖 ^ItemQuantity$ ^ItemName$</sys:String>
    <!--  Buy Task  -->
    <sys:String x:Key="TaskBuy">协商购买更好的装备</sys:String>

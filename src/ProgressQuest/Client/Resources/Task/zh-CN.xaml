    <sys:String x:Key="HeadingToKillingFields">前往杀戮场</sys:String>
    <!--  Kill Task  -->
    <sys:String x:Key="TaskKillKey">^Executing$ ^Level$ 级 ^MonsterDescript$</sys:String>
    <sys:String x:Key="TaskKillKeyForNPC">偶遇</sys:String>
    <sys:String x:Key="TaskKillKeyForMonster">对战</sys:String>
